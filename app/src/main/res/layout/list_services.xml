<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:id="@+id/service_container"
    android:padding="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_service_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/collapsed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_service_subtitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Subtitle"
                android:maxLines="3"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:textStyle="normal"/>
            <ImageView
                android:id="@+id/imageView_service"
                android:padding="8dp"
                android:src="@drawable/food_delivery"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/expanded_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_service_subtitle_expanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtitle"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:padding="8dp"
                android:textStyle="normal"/>
            <ImageView
                android:id="@+id/imageView_service_expanded"
                android:padding="8dp"
                android:src="@drawable/food_delivery"
                android:scaleType="fitCenter"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>