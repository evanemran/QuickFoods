<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:context=".FoodDetailActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/container_cart"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meal" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_foodName"
                    android:text="Burger Combo"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:layout_toStartOf="@+id/textView_foodPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_foodPrice"
                    android:text="250 Tk."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_foodInfo"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:paddingStart="8dp"
                    android:layout_below="@+id/textView_foodPrice"
                    android:text="A combo of Beef/Chicken Burger with Potato Wedges and Oreo Shake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_addons"
                    android:text="Add Ons"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:layout_toStartOf="@+id/textView_optional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_optional"
                    android:text="Optional"
                    android:background="@color/grey"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_addons_count"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:paddingStart="8dp"
                    android:layout_below="@+id/textView_addons"
                    android:text="Select up to 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_addons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_below="@+id/textView_addons_count"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Special Instructions"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:paddingStart="8dp"
                    android:text="You can write down here any special instructions."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/instruction_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/grey">
                    <TextView
                        android:id="@+id/textView_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="4"
                        android:gravity="top|start"
                        android:minLines="4"
                        android:hint="e.g. no mayo"
                        android:padding="8dp"
                        android:maxLines="4"
                        android:scrollbars="vertical"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:text="0/500"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/container_cart"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/ic_remove"
            android:background="@drawable/button_rounded"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/textView_cartCount"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:src="@drawable/ic_add"
            android:background="@drawable/button_rounded"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/white" />
        <Button
            android:id="@+id/button_addToCart"
            android:layout_marginStart="8dp"
            android:text="Add to cart"
            android:background="@drawable/rounded_button"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>