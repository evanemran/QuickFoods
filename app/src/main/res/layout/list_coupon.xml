<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    android:id="@+id/coupon_container"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_cTitle"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:text="Tk 120 off on your first order!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView_cCode"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:paddingTop="8dp"
            android:text="vqkXyz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_cAmount"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingTop="4dp"
                android:text="120 Tk."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_cValidity"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:paddingTop="4dp"
                android:text="15 Aug 2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>